<form class="form-horizontal" role="form" action="reportMemo.do" method="post" enctype="multipart/form-data">

    <div class="form-group">
        
            <label for="menuId" class="col-md-2 control-label">报表名称</label>
            <div class="col-md-3">
                <select class="selectpicker" id="menuId" name="keyValue">
                </select>
            </div>

            <label for="indicator" class="col-md-2 control-label">指标名称</label>
            <div class="col-md-3">
                <select class="selectpicker" id="indicator" name="indicator">
                </select>
            </div>

        






    </div>

    <div class="form-group date">
        <label for="keyDate" class="col-md-2 control-label">注释日期</label>
        <div class="col-md-3">
            <div class="input-group date">
                <input type="text" name="keyDate" id="keyDate" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
        </div>
        <div class="col-md-2 checkbox control-label">
            <label>
                <input type="checkbox" id="isEnabled" name="isEnabled">是否显示
            </label>

        </div>

        <div class="form-group">
              	<label for="period" class="col-md-1 control-label">期间</label>
           		<div class="col-md-2">
                	<div class="input-group">
                            <input type="text"  pattern="\d{4}-\d{2}" required oninvalid="setCustomValidity('请按2015-03的格式输入!')"
                            	    onchange="try{setCustomValidity('')}catch(e){}" readonly name="period" id="period" class="form-control">
                	</div>
              	</div>
         </div>
        
    </div>

    <div class="form-group">
        <label for="indicatorMemo" class="col-md-2 control-label">说明信息</label>
        <div class="col-md-8">
            <textarea class="form-control" name="memo" id="indicatorMemo" rows="5" placeholder="说明信息..."></textarea>
        </div>
    </div>


    <div class="form-group">
        <label for="picFile" class="col-md-2 control-label">指标快照</label>
        <div class="col-md-8">
            <input type="file" name="picFile" class="form-control file" id="picFile" placeholder="上传文件">

            <input type="hidden" name="id" value="{{id}}" id="id">
            <input type="hidden" name="method" value="addMemo">
        </div>
    </div>


    <div class="form-group">
        <label for="postscriptFiles" class="col-md-2 control-label">附加说明</label>
        <div class="col-md-8">
            <input type="file" name="postscriptFiles" multiple="true" class="form-control file" id="postscriptFiles" placeholder="上传附加说明文件">
        </div>
        <input type="hidden" name="clearPostscript" value="false">
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn blue default">提交</button>
            <button type="button" class="btn blue" action="delete">删除</button>
            <button type="button" class="btn blue" action="cancel">取消</button>
        </div>
    </div>
</form>
